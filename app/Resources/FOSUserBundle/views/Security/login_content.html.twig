{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="card card-container">
        <div class="col-md-7 col-md-offset-2 mb30">

            <img id="logo-img" class="logo-img "
                 src="{{ asset('assets/image/logo/logo.png') }}"/>
        </div>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}


            <input class="form-control mb10" placeholder="Email" type="text" id="username" name="_username"
                   value="{{ last_username }}"
                   required="required" autocomplete="username"/>


            <input class="form-control mb10" placeholder="Mot de passe" type="password" id="password" name="_password"
                   required="required" autocomplete="current-password"/>


            <input type="checkbox" class="mb10" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">Se souvenir de moi</label>



                <input class="btn btnBorderBlue w100 mb10" type="submit" id="_submit" name="_submit" value="Connexion"/>

            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©?</a>
        </form>
    </div>
</div>