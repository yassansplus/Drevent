{% extends 'base.html.twig' %}
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('assets/css/profil/association.css') }}">
    {{ parent() }}

{% endblock stylesheets %}

{% block body %}
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12 col-sm-12 pl0 pr0">
                <div class="card hovercard mt0">
                    <div class="card-background">
                        <img class="card-bkimg" alt="" src="{{ asset('assets/image/front/event.jpg') }}">
                        <!-- http://lorempixel.com/850/280/people/9/ -->
                    </div>
                    <div class="useravatar">
                        <img alt="" src="https://avatars3.githubusercontent.com/u/34783077?s=460&v=4">
                    </div>
                    <div class="card-info name">
                        <span class="card-title">{{ association.name }}</span>

                    </div>
                </div>
                <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                            <button type="button" id="stars" class="btn " href="#tab1" data-toggle="tab"><span
                                    class="glyphicon glyphicon-star" aria-hidden="true"></span>
                            <div class="hidden-xs">Mes evenements</div>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                            <div class="hidden-xs">Mes followers</div>
                        </button>
                    </div>
                    {#<div class="btn-group" role="group">#}
                        {#<button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">#}
                            {#<span class="glyphicon glyphicon-user" aria-hidden="true"></span>#}
                            {#<div class="hidden-xs">Mes sondages</div>#}
                        {#</button>#}
                    {#</div>#}
                </div>
                <div class="container-fluid mt50">

                    <div class="col-md-3">

                        <div class="col-md-5 col-md-offset-3">

                            {#<img class="img-circle img-responsive" alt="" src={{ asset('assets/image/profilPics/'~user.profil.profilPic) }}>#}
                        </div>
                        <div class="col-md-12">
                            <hr>
                        </div>
                        <div class="col-md-12">
                            <span>
                                <i class="fa fa-address-card-o"
                                   aria-hidden="true"></i>
                            </span>
                            {{ association.name }}
                        </div>
                        <div class="col-md-12">
                            <span><i class="fa fa-map-marker"
                                                        aria-hidden="true"></i>
                            </span>
                            {{ association.place }}
                        </div>
                        <div class="col-md-12"><span><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
                            gerée par :
                            {{ association.user.name }}
                            {{ association.user.surname }}

                        </div>
                        <div class="col-md-12"><span><i class="fa fa-calendar" aria-hidden="true"></i></span> Dernier
                            évenements:
                        </div>
                        <div class="col-md-12"><span><i class="fa fa-calendar" aria-hidden="true"></i></span> suivi par
                            {{ association.etudiants | length }} personnes
                        </div>


                    </div>
                    <div class="col-md-9">
                        <div class="tab-content">

                            {% include 'association/include/tab1.html.twig' %}
                            {#{% include 'association/include/tab2.html.twig' %}#}
                            {#{% include 'association/include/tab3.html.twig' %}#}

                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    <link rel="stylesheet" href="{{ asset('assets/js/profil/association.js') }}">
    {{ parent() }}
{% endblock %}