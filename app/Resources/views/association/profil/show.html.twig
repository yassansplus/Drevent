{% extends 'base.html.twig' %}

{% block body %}
    <h1>Association</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ association.name }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ association.place }}</td>
            </tr>
            <tr>
                <th>Schedule</th>
                <td>{{ association.schedule }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('association_homepage') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('association_edit', { 'id': association.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
